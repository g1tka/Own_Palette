投稿詳細ページ
<div class="container">
  <div class="row d-flex justify-content-center">
    <%= link_to admin_post_path(@post) do %>
    <div class="col-lg-4">
      <div class="flame ml-lg-5 text-center mb-4 mb-md-0">
        <div class="image m-3">
          <%= image_tag @post.image, size: "200x200" %>
        </div>
        <div class="row d-flex justify-content-end mr-1">
          <div classs="badge bg-primary text-wrap", style="width: 12em;">
            <%= link_to admin_user_path(@post.user) do %>
              <%= @post.user.name %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6 mt-4">
      <div class="row ml-3 mb-3">
        本文：<%= @post.body %>
      </div>
    <% end %>
      <% if @post.comments.any? %>
        <% @post.comments.each do |comment| %>
          <% comment_stance = case comment.stance
                              when 'agree'
                                "comment-agree"
                              when 'neutral'
                                "comment-neutral"
                              when 'disagree'
                                "comment-disagree"
                              end %>
          <div class="row mt-2">
            <div class="col-md-9 mb-2">
              <div class="<%= comment_stance %>">
                <%= comment.body %>
              </div>
            </div>
            <div class="col mb-2">
              <%= link_to '削除', admin_comment_path(@post, comment), method: :delete, class:"btn btn-sm btn-danger" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col my-5">
          まだコメントがありません。
        </div>
      <% end %>
  </div>
</div>