<h4>
  <i class="fa-solid fa-person-digging"></i>
  管理者用ページ
  <i class="fa-solid fa-wrench"></i>
</h4>
<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="admin_form">
        <div class="row mt-3">
          <div class="col-6"><%= f.label :email %></div>
          <div class="col-6"><%= f.text_field :email, autofocus: true %></div>
        </div>
        <div class="row">
          <div class="col-6"><%= f.label :password %></div>
          <div class="col-6"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>
      </div>
      <div class="col mt-2">
        <%= f.submit "Log in", class: "btn btn-outline-secondary" %>
        <button type="button" class="btn btn-warning" data-toggle='modal' data-target="#adminInfomation">
          <i class="fa-solid fa-user-lock"></i>
        </button>
      </div>
    <% end %>
    <div class="col-10">
      <div class="alert"><%= alert %></div>
    </div>
  </div>
  <h3 class="mt-5">※topページは<%= link_to "こちら", root_path %>です。</h3>
</div>

<div class="modal fade" id="adminInfomation" tabindex="-1" role="dialog" aria-labelledby="adminInfomationTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header pl-5">
          <h4 class="modal-title" id="adminInfomation">おしらせ</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          admin画面の検証用に以下アカウントをご利用ください。<br/>
          Email : admin@test.com<br/>
          password : adminpassword
        </div>
        <div class="modal-footer pr-5">
          <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>