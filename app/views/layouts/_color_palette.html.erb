      <%= link_to posts_path(color: '0') do %>
        <div class="square red"></div>
      <% end %>
      <%= link_to posts_path(color: '1') do %>
        <div class="square orange"></div>
      <% end %>
      <%= link_to posts_path(color: '2') do %>
        <div class="square yellow"></div>
      <% end %>
      <%= link_to posts_path(color: '3') do %>
        <div class="square green"></div>
      <% end %>
    </div>
    <div class="color-row">
      <%= link_to posts_path(color: '4') do %>
        <div class="square blue"></div>
      <% end %>
      <%= link_to posts_path(color: '5') do %>
        <div class="square purple"></div>
      <% end %>
      <%= link_to posts_path(color: '6') do %>
