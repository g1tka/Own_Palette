<!DOCTYPE html>
<html>
  <head>
    <title>OwnPalette</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/18d078742a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container header-content">
        <ul class="d-flex list-unstyled justify-content-center">
          <% if admin_signed_in? %>
            <div class="col-1">
              <%= link_to root_path do %>
                <%= image_tag("logo1.png", src: "/assets/images/logo1.png", width: 100, hight: 100 ) %>
              <% end %>
            </div>
            <div class="col-7 d-flex align-items-center justify-content-center">
              <li class='mx-3'><%= link_to 'Post List', admin_posts_path %></li>
              <li class='mx-3'><%= link_to 'User List', admin_users_path %></li>
              <li class='mx-3'><%= link_to 'Comment List', admin_comments_path %></li>
              <li class='mx-3'><%= link_to 'Log out', destroy_admin_session_path, method: :delete %></li>
            </div>
            <div class="col-4">
              <%= render 'layouts/color_palette' %>
            </div>
          <% elsif user_signed_in? %>
            <div class="col-1">
              <%= link_to root_path do %>
                <%= image_tag("logo1.png", src: "/assets/images/logo1.png", width: 100, hight: 100 ) %>
              <% end %>
            </div>
            <div class="col d-flex align-items-center justify-content-center">
              <li class='mx-3'><%= link_to 'Post', new_post_path %></li>
              <li class='mx-3'><%= link_to 'My Page', posts_path %></li>
              <li class='mx-3'><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </div>
            <div class="col-4">
              <%= render 'layouts/color_palette' %>
            </div>
          <% else %>
            <div class="col-1">
              <%= link_to root_path do %>
                <%= image_tag("logo1.png", src: "/assets/images/logo1.png", width: 100, hight: 100 ) %>
              <% end %>
            </div>
            <div class="col-10 d-flex align-items-center justify-content-center">
              <li class='mx-3'><%= link_to 'About', about_path %></li>
              <li class='mx-3'><%= link_to 'Sign up', new_user_registration_path %></li>
              <li class='mx-3'><%= link_to 'Log in', new_user_session_path %></li>
            </div>
            <div class="col-1">
              <div></div>
            </div>
          <% end %>
        </ul>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div>
        <span>Copyright Â© Infratop Inc. All Rights Reserved.</span>
      </div>
    </footer>
  </body>
</html>
