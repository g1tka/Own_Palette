<p>ログインページ</p>
<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <table class="user_form">
        <tr>
          <!--emailとPWでログインできるという要件のため名前でのログインは実装しない-->
          <th><%#= f.label :name, "User name" %></th>
          <td><%#= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
          <th><%= f.label :email %></th>
          <td><%= f.text_field :email, autofocus: true %></td>
        </tr>
        <tr>
          <th><%= f.label :password %></th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
      </table>
      <div class="col mt-3">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row mt-5 d-flex justify-content-center">
  まだアカウントをお持ちでない方は
  <%= link_to 'こちら', new_user_registration_path %>
</div>